<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/overskrift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginTop="84dp"
        android:text="Velkommen til GÆT ET TAL!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/knap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Gæt"
        app:layout_constraintStart_toStartOf="@+id/statusfelt"
        app:layout_constraintTop_toBottomOf="@+id/statusfelt" />


    <Button
        android:id="@+id/knap2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="188dp"
        android:text="Knap2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/knap"
        app:layout_constraintStart_toStartOf="@+id/knap" />

    <TextView
        android:id="@+id/statusfelt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:text="Skriv dit gæt og tryk på knappen"
        app:layout_constraintStart_toEndOf="@+id/pointtal"
        app:layout_constraintTop_toBottomOf="@+id/pointtal" />

    <TextView
        android:id="@+id/pointtekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Points:"
        app:layout_constraintBaseline_toBaselineOf="@+id/pointtal"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pointtal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="201dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/pointtekst"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="73dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/statusfelt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusfelt" />

</androidx.constraintlayout.widget.ConstraintLayout>